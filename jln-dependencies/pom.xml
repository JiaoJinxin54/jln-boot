<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>3.1.8</version>
        <relativePath/>
    </parent>

    <groupId>top.jiaojinxin</groupId>
    <artifactId>jln-dependencies</artifactId>
    <version>3.1.8.0-SNAPSHOT</version>
    <name>jln-dependencies</name>
    <packaging>pom</packaging>
    <description>统一依赖管理。</description>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>焦金鑫</name>
            <email>jiaojx54@163.com</email>
            <timezone>+8</timezone>
        </developer>
    </developers>

    <scm>
        <url>https://github.com/JiaoJinxin54/jln-boot</url>
        <connection>scm:git:https://github.com/JiaoJinxin54/jln-boot.git</connection>
        <developerConnection>scm:git:https://github.com/JiaoJinxin54/jln-boot.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <system>GitHub Issues</system>
        <url>https://github.com/JiaoJinxin54/jln-boot/issues</url>
    </issueManagement>

    <properties>
        <java.version>21</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <maven-gpg-plugin.version>3.0.1</maven-gpg-plugin.version>
        <nexus-staging-maven-plugin.version>1.6.13</nexus-staging-maven-plugin.version>

        <jln.version>3.1.8.0-SNAPSHOT</jln.version>

        <hutool.version>5.8.25</hutool.version>
        <aws-java-sdk-s3.version>1.12.429</aws-java-sdk-s3.version>
        <mybatis-flex.version>1.7.6</mybatis-flex.version>
        <mybatis-spring.version>3.0.3</mybatis-spring.version>
        <druid-spring-boot-3-starter.version>1.2.18</druid-spring-boot-3-starter.version>
        <UserAgentUtils.version>1.21</UserAgentUtils.version>
        <transmittable-thread-local.version>2.14.5</transmittable-thread-local.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- jln-properties -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-properties</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-i18n -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-i18n</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-model -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-model</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-exception -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-exception</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-util -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-util</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-oss -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-oss</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-sign -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-sign</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-audit-log -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-audit-log</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-system-log -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-system-log</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-system-oss -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-system-oss</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-system-security -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-system-security</artifactId>
                <version>${jln.version}</version>
            </dependency>
            <!-- jln-system-data -->
            <dependency>
                <groupId>top.jiaojinxin</groupId>
                <artifactId>jln-system-data</artifactId>
                <version>${jln.version}</version>
            </dependency>

            <!-- hutool -->
            <dependency>
                <groupId>cn.hutool</groupId>
                <artifactId>hutool-bom</artifactId>
                <version>${hutool.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- aws-java-sdk-s3 -->
            <dependency>
                <groupId>com.amazonaws</groupId>
                <artifactId>aws-java-sdk-s3</artifactId>
                <version>${aws-java-sdk-s3.version}</version>
            </dependency>
            <!-- mybatis-flex-dependencies -->
            <dependency>
                <groupId>com.mybatis-flex</groupId>
                <artifactId>mybatis-flex-dependencies</artifactId>
                <version>${mybatis-flex.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- mybatis-spring -->
            <dependency>
                <groupId>org.mybatis</groupId>
                <artifactId>mybatis-spring</artifactId>
                <version>${mybatis-spring.version}</version>
            </dependency>
            <!-- druid-spring-boot-3-starter -->
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>druid-spring-boot-3-starter</artifactId>
                <version>${druid-spring-boot-3-starter.version}</version>
            </dependency>
            <!-- UserAgentUtils -->
            <dependency>
                <groupId>eu.bitwalker</groupId>
                <artifactId>UserAgentUtils</artifactId>
                <version>${UserAgentUtils.version}</version>
            </dependency>
            <!-- transmittable-thread-local -->
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>transmittable-thread-local</artifactId>
                <version>${transmittable-thread-local.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <profiles>
        <profile>
            <id>release</id>
            <distributionManagement>
                <repository>
                    <id>sonatype-nexus-release</id>
                    <url>https://s01.oss.sonatype.org/content/repositories/releases/</url>
                </repository>
                <snapshotRepository>
                    <id>sonatype-nexus-snapshot</id>
                    <url>https://s01.oss.sonatype.org/content/repositories/snapshots/</url>
                </snapshotRepository>
            </distributionManagement>
            <build>
                <plugins>
                    <!-- 生成javadoc -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- 生成签名 -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>${maven-gpg-plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- 将组件部署到sonatype-nexus并将其释放到中央存储库 -->
                    <plugin>
                        <groupId>org.sonatype.plugins</groupId>
                        <artifactId>nexus-staging-maven-plugin</artifactId>
                        <version>${nexus-staging-maven-plugin.version}</version>
                        <extensions>true</extensions>
                        <configuration>
                            <serverId>sonatype-nexus-release</serverId>
                            <nexusUrl>https://s01.oss.sonatype.org/</nexusUrl>
                            <autoReleaseAfterClose>true</autoReleaseAfterClose>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>snapshot</id>
            <distributionManagement>
                <repository>
                    <id>sonatype-nexus-release</id>
                    <url>https://s01.oss.sonatype.org/content/repositories/releases/</url>
                </repository>
                <snapshotRepository>
                    <id>sonatype-nexus-snapshot</id>
                    <url>https://s01.oss.sonatype.org/content/repositories/snapshots/</url>
                </snapshotRepository>
            </distributionManagement>
            <build>
                <plugins>
                    <!-- 生成javadoc -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- 生成签名 -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>${maven-gpg-plugin.version}</version>
                        <executions>
                            <execution>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- 将组件部署到sonatype-nexus并将其释放到中央存储库 -->
                    <plugin>
                        <groupId>org.sonatype.plugins</groupId>
                        <artifactId>nexus-staging-maven-plugin</artifactId>
                        <version>${nexus-staging-maven-plugin.version}</version>
                        <extensions>true</extensions>
                        <configuration>
                            <serverId>sonatype-nexus-snapshot</serverId>
                            <nexusUrl>https://s01.oss.sonatype.org/</nexusUrl>
                            <autoReleaseAfterClose>true</autoReleaseAfterClose>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <!-- 编译插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <!-- 打包同时生成源码包 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
